root = true

[*.cs]
indent_size = 4
indent_style = space
tab_width = 4
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

csharp_type_declaration_braces = end_of_line
csharp_brace_style = end_of_line
csharp_other_braces = end_of_line
csharp_prefer_braces = true
resharper_csharp_empty_block_style = together

csharp_blank_lines_after_file_scoped_namespace_directive = true
csharp_blank_lines_inside_namespace = true
resharper_blank_lines_inside_namespace = 2

csharp_new_line_before_catch = false
csharp_new_line_before_else = false
csharp_new_line_before_finally = false

csharp_style_var_elsewhere = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_style.underscored_camel_case.capitalization = camel_case
dotnet_naming_style.underscored_camel_case.required_prefix = _
dotnet_naming_rule.private_fields.symbols = private_fields
dotnet_naming_rule.private_fields.style = underscored_camel_case
dotnet_naming_rule.private_fields.severity = warning

dotnet_naming_symbols.locals.applicable_kinds = local,parameter
dotnet_naming_symbols.locals.applicable_accessibilities = *
dotnet_naming_style.all_lower.capitalization = all_lower
dotnet_naming_style.all_lower.word_separator = _
dotnet_naming_rule.locals.symbols = locals
dotnet_naming_rule.locals.style = all_lower
dotnet_naming_rule.locals.severity = warning
